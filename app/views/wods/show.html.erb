<div class="row">
  <div class="page-header col-md-12">
    <h1><%= @wod.program.name %> <small><%= @wod.name %></small></h1>
  </div>
</div>
<div class="row">
  <div class="col-md-8">
    <% if user_signed_in? && current_user.admin == true %>
      <div class="well">
        <%= render 'form' %>
      </div>
    <% end %>
    <div class="well">
      <% @wod.description.split("\n").each do |l| %>
        <div><%= l %><br></div>
      <% end %>
    </div>
    <% @statistics.each do |statistic| %>
      <div class="panel panel-default">
        <div class="panel-heading"><%= link_to statistic[1][0].user.first_name + " " + statistic[1][0].user.last_name, user_path(statistic[1][0].user) %></div>
        <ul class="list-group">
          <% statistic[1].each do |performance| %>
            <% if performance.workout.workout_type.name == "weight" %>
              <li class="list-group-item"><%= performance.workout.name %>.&nbsp;&nbsp;<%= performance.performance %>lbs</li>
            <% end %>
            <% if performance.workout.workout_type.name == "time" %>
              <li class="list-group-item"><%= performance.workout.name %>.&nbsp;&nbsp;<%= performance.performance %></li>
            <% end %>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">
    <div class="well">
      <h3>Associated Workout Pieces</h3>
      <% @wod.workouts.each do |workout| %>
        <div>
          <%= workout.name %>.
          <%= workout.description %><br>
          For: <%= workout.workout_type.name.capitalize %><br>
          <%= link_to 'Edit', edit_wod_workout_path(id: workout.id, wod_id: @wod.id), remote: true, id: 'edit_workout' %>
        </div>
        <br>
      <% end %>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel"><%= @wod.name %><span id='workoutName'></span></h4>
      </div>
      <div class="modal-body">
        <span id='editName'></span>
        <span id='editDescription'></span>
        <span id='editType'></span>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
