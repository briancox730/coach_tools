body {
  font-family: Optima, Segoe, "Segoe UI", Candara, Calibri, Arial, sans-serif;
  color: #354458;
  padding-top: 70px;
  background-color: #354458;
  background-image: url(<%= asset_path 'background-athletes-tools.jpg' %>);
}

h1, h2, h3, h4, h5, h6 {
  color: #F5F5F5;
}

form h1, h2, h3, h4, h5, h6 {
  color: #354458;
  font-weight: bold;
}

form input {
  color: #354458;
}

.dark-well {
  border: 1px solid #000;
  border-radius: 15px;
  margin: 0 0 20px 0;
  padding: 20px 0 20px 0;
  background-color: rgba(0,0,0,.2);
}

.dark-well button {
  color: #F5F5F5;
  background-color: rgba(53,68,88,.3);
  border-color: #000;
}

.dark-well button:hover {
  color: #F5F5F5;
  background-color: rgba(255,255,255,.1);
  border-color: #000;
}

.dark-well button:active {
  color: #F5F5F5;
  background-color: rgba(255,255,255,.1);
}

.dark-well button:focus {
  color: #F5F5F5;
  background-color: rgba(255,255,255,.1);
  border-color: #000;
  outline: none;
}

.overflow .right {
  margin-right: 20px;
}

.btn-warning {
  background-color: #354458;
  border-color: #428bca;
}

.btn-warning:hover {
  background-color: #253448;
  border-color: #354458;
}

.navbar {
  background-color: #F5F5F5;
  border-bottom: 1px solid #e3e3e3;
}

.navbar button {
  background-color: #354458;
  border: 1px solid #333333;
  background-image: url(<%= asset_path 'button-lines.png' %>);
}

.right {
  float: right;
}

.left {
  float: left;
}

.overflow {
  overflow: auto;
}
.pr-table-hidden {
  display: none;
}

canvas {
  padding: 0 35px 0 35px;
}
