body {
  font-family: Optima, Segoe, "Segoe UI", Candara, Calibri, Arial, sans-serif;
  color: #354458;
  padding-top: 70px;
  background-color: #354458;
  background-image: url(<%= asset_path 'background-athletes-tools.jpg' %>);
}

h1, h2, h3, h4, h5, h6 {
  color: #F5F5F5;
}

form h1, h2, h3, h4, h5, h6 {
  color: #354458;
  font-weight: bold;
}

form input {
  color: #354458;
}

.btn-warning {
  background-color: #354458;
  border-color: #428bca;
}

.btn-warning:hover {
  background-color: #253448;
  border-color: #354458;
}

.navbar {
  background-color: #F5F5F5;
  border-bottom: 1px solid #e3e3e3;
}

.navbar button {
  background-color: #354458;
  border: 1px solid #333333;
  background-image: url(<%= asset_path 'button-lines.png' %>);
}

.right {
  float: right;
}

.left {
  float: left;
}

.pr-table-hidden {
  display: none;
}

canvas {
  padding: 0 35px 0 0;
}
